{
    // Specifies the name of the Dev Container
    "name": "compro-dev-container",

    // Specifies the Dockerfile to use for building the container image
    "dockerFile": "../Dockerfile",

    // Install additional extensions for VS Code
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "formulahendry.code-runner",
                "llvm-vs-code-extensions.vscode-clangd"
            ]
        }
    }
}
